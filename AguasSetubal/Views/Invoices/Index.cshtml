@model IEnumerable<AguasSetubal.Models.Fatura>

@{
    ViewData["Title"] = "Faturas";
}

<div class="row">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <h4 class="">@ViewData["Title"]</h4>
        @if (this.User.IsInRole("Funcionario"))
        {
            <a asp-action="Create" class="btn btn-primary">Criar nova Fatura</a>
        }
    </div>
    <div class="col-12">
        <div class="card shadow-lg mt-3">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.First().Cliente.Nome)</th>
                                <th>@Html.DisplayNameFor(model => model.First().DataEmissao)</th>
                                <th>Consumo</th>
                                <th>Valor</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Cliente.Nome)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DataEmissao)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ConsumoTotal)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ValorTotal)</td>
                                    <td class="text-center">
                                        @if (this.User.IsInRole("Funcionario"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1"><i class="fas fa-edit"></i></a>
                                        }
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mx-1"><i class="fas fa-search"></i></a>
                                        @if (this.User.IsInRole("Funcionario"))
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1"><i class="fas fa-trash"></i></a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>









@model AguasSetubal.Models.Fatura

@{
    ViewData["Title"] = "Eliminar Fatura";
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg mt-3">
                <div class="card-body">
                    <h4 class="text-primary">Tem a certeza que pretende eliminar a Fatura</h4>
                    <hr />
                    <dl class="row">
                        <!-- Nome do Cliente -->
                        <dt class="col-sm-2">
                            Nome do Cliente
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Cliente.Nome
                        </dd>

                        <!-- Valor Total -->
                        <dt class="col-sm-2">
                            Valor Total
                        </dt>
                        <dd class="col-sm-10">
                            @Model.ValorTotal.ToString("F2") &euro;
                        </dd>

                        <!-- Outros campos da fatura -->
                        <!-- Adicione aqui outros campos se necessário -->
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                    </form>

                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-secondary">Voltar para Lista de Faturas</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@model AguasSetubal.Models.Fatura

@{
    ViewData["Title"] = "Detalhes da Fatura";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h4 class="card-title">Detalhes da Fatura</h4>
                    <hr />

                    <dl class="row">
                        <!-- Nome do Cliente -->
                        <dt class="col-sm-4 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Cliente.Nome)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Cliente.Nome)
                        </dd>

                        <!-- Endereço do Cliente -->
                        <dt class="col-sm-4 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Endereco)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Endereco)
                        </dd>

                        <!-- Leitura Anterior -->
                        <dt class="col-sm-4 font-weight-bold">
                            @Html.DisplayNameFor(model => model.LeituraAnterior)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.LeituraAnterior)
                        </dd>

                        <!-- Leitura Atual -->
                        <dt class="col-sm-4 font-weight-bold">
                            @Html.DisplayNameFor(model => model.LeituraAtual)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.LeituraAtual)
                        </dd>

                        <!-- M3 Gastos -->
                        <dt class="col-sm-4 font-weight-bold">
                            @Html.DisplayNameFor(model => model.M3Gastos)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.M3Gastos)
                        </dd>

                        <!-- Data de Emissão -->
                        <dt class="col-sm-4 font-weight-bold">
                            @Html.DisplayNameFor(model => model.DataEmissao)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DataEmissao)
                        </dd>

                        <!-- Valor Total a Pagar -->
                        <dt class="col-sm-4 font-weight-bold">Valor Total a Pagar (€)</dt>
                        <dd class="col-sm-8">
                            @{
                                // Calculando o valor total e o escalão
                                decimal consumo = Model.M3Gastos;
                                decimal valorTotal = 0.0M;
                                string escalao = "Escalão 1";

                                if (consumo <= 5)
                                {
                                    valorTotal = consumo * 0.30M;
                                    escalao = "Escalão 1";
                                }
                                else if (consumo <= 15)
                                {
                                    valorTotal = (5 * 0.30M) + ((consumo - 5) * 0.80M);
                                    escalao = "Escalão 2";
                                }
                                else if (consumo <= 25)
                                {
                                    valorTotal = (5 * 0.30M) + (10 * 0.80M) + ((consumo - 15) * 1.20M);
                                    escalao = "Escalão 3";
                                }
                                else
                                {
                                    valorTotal = (5 * 0.30M) + (10 * 0.80M) + (10 * 1.20M) + ((consumo - 25) * 1.60M);
                                    escalao = "Escalão 4";
                                }

                                @valorTotal.ToString("F2")
                            }
                        </dd>

                        <!-- Escalão correspondente -->
                        <dt class="col-sm-4 font-weight-bold">Escalão</dt>
                        <dd class="col-sm-8">
                            @escalao
                        </dd>
                    </dl>

                    <!-- Link de retorno -->
                    <div class="mt-4">
                        <a href="@Url.Action("ImprimirFatura", new { id = Model.Id })" class="btn btn-success btn-lg">
                            Fatura para Pagamento
                        </a>
                        <a href="@Url.Action("Index", "Faturas")" class="btn btn-primary btn-lg">Voltar para Lista de Faturas</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 100%;
        padding: 0 15px;
    }

    .card {
        border-radius: 10px;
        margin-top: 20px;
    }

    .card-body {
        padding: 20px;
    }

    .row dt, .row dd {
        padding: 10px 0;
    }

    .font-weight-bold {
        font-weight: bold;
    }

    .btn-lg {
        font-size: 1.125rem;
        padding: 10px 20px;
    }
</style>




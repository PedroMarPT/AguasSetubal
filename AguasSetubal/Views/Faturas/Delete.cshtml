@model AguasSetubal.Models.Fatura

@{
    ViewData["Title"] = "Eliminar Fatura";
}

<div class="container mt-5">
    <h1 class="display-4 text-primary">@ViewData["Title"]</h1>

    <div class="card shadow-lg mt-3">
        <div class="card-body">
            <h3 class="text-danger">Tem a certeza que deseja eliminar esta fatura?</h3>
            <div>
                <h4 class="text-primary">Detalhes da Fatura</h4>
                <hr />
                <dl class="row">
                    <!-- Nome do Cliente -->
                    <dt class="col-sm-2">
                        Nome do Cliente
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Cliente.Nome
                    </dd>

                    <!-- Valor Total -->
                    <dt class="col-sm-2">
                        Valor Total
                    </dt>
                    <dd class="col-sm-10">
                        @Model.ValorTotal.ToString("F2") &euro;
                    </dd>

                    <!-- Outros campos da fatura -->
                    <!-- Adicione aqui outros campos se necessário -->
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </form>

                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-secondary">Voltar para Lista de Faturas</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 100%;
        padding: 0 15px;
    }

    .card {
        width: 100%;
    }

    .card-body {
        padding: 20px;
    }

    h1, h4 {
        color: #0056b3;
    }

    .text-danger {
        color: #dc3545;
    }

    .text-primary {
        color: #007bff;
    }

    .btn {
        min-width: 100px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>



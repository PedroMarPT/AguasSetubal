@model AguasSetubal.Models.ViewModels.RegisterNewUserViewModel

@{
    ViewData["Title"] = "Registar Conta";
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-5 offset-md-4">
            <div class="card shadow-lg mt-3 scroll">
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewBag.Message
                        </div>
                    }
                    else
                    {
                        <h2 class="display-4 text-primary">@ViewData["Title"]</h2>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <label asp-for="FirstName">Nome</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-warning"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="LastName">Apelido</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-warning"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Username">Email</label>
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-warning"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Address">Morada</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-warning"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PhoneNumber">Contato</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" type="password" class="form-control" />
                                <span asp-validation-for="Password" class="text-warning"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Confirm">Confirme a password</label>
                                <input asp-for="Confirm" type="password" class="form-control" />
                                <span asp-validation-for="Confirm" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <label for="SelectedOption">Selecione a role a atribuir ao utilizador</label>
                                @Html.DropDownListFor(m => m.SelectedOption, new SelectList(Model.Roles))
                            </div>
                            <div class="form-group">
                                <label asp-for="ClientId" class="control-label">Selecione o cliente que o user irá gerir (aplicável à role Cliente)</label>
                                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.Clientes"></select>
                                <span asp-validation-for="ClientId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Register New User" class="btn btn-primary" />
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


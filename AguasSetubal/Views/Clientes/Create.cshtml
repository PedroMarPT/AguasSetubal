@model AguasSetubal.Models.Cliente

@{
    ViewData["Title"] = "Criar Cliente";
}

<!-- Estilos customizados para um visual mais moderno e coerente -->
<style>
    .card {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1, h4 {
        color: #0056b3;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .form-control {
        border-radius: 5px;
    }

    .text-danger {
        font-size: 0.9em;
    }

    .back-to-list {
        margin-top: 20px;
    }

        .form-group label {
            font-weight: bold;
        }
</style>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg mt-3">
                <div class="card-body">
                    <h1 class="display-4">@ViewData["Title"]</h1>
                    <h4 class="mt-4">Detalhes do Cliente</h4>
                    <hr />
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Campo Nome -->
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Campo Morada -->
                        <div class="form-group">
                            <label asp-for="Morada" class="control-label"></label>
                            <input asp-for="Morada" class="form-control" />
                            <span asp-validation-for="Morada" class="text-danger"></span>
                        </div>

                        <!-- Campo Número do Cartão de Cidadão -->
                        <div class="form-group">
                            <label asp-for="NumeroCartaoCidadao" class="control-label"></label>
                            <input asp-for="NumeroCartaoCidadao" class="form-control" />
                            <span asp-validation-for="NumeroCartaoCidadao" class="text-danger"></span>
                        </div>

                        <!-- Campo NIF -->
                        <div class="form-group">
                            <label asp-for="NIF" class="control-label"></label>
                            <input asp-for="NIF" class="form-control" />
                            <span asp-validation-for="NIF" class="text-danger"></span>
                        </div>

                        <!-- Campo Contacto Telefónico -->
                        <div class="form-group">
                            <label asp-for="ContactoTelefonico" class="control-label"></label>
                            <input asp-for="ContactoTelefonico" class="form-control" />
                            <span asp-validation-for="ContactoTelefonico" class="text-danger"></span>
                        </div>

                        <!-- Campo Número do Contrato -->
                        <div class="form-group">
                            <label asp-for="NumeroContrato" class="control-label"></label>
                            <input asp-for="NumeroContrato" class="form-control" />
                            <span asp-validation-for="NumeroContrato" class="text-danger"></span>
                        </div>

                        <!-- Campo Número do Contador -->
                        <div class="form-group">
                            <label asp-for="NumeroContador" class="control-label"></label>
                            <input asp-for="NumeroContador" class="form-control" />
                            <span asp-validation-for="NumeroContador" class="text-danger"></span>
                        </div>
                        <!-- Botão de Submissão -->
                        <div class="form-group">
                            <input type="submit" value="Criar" class="btn btn-primary btn-lg" />
                            <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">Voltar à Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


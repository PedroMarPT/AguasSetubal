@model AguasSetubal.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg mt-3">
                <div class="card-body">
                    <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
                    <h3 class="text-danger mt-4">Tem certeza que deseja apagar este cliente?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Morada)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Morada)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NumeroContrato)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NumeroContrato)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-start align-items-center">
                            <input type="submit" value="Apagar" class="btn btn-danger btn-lg mr-2" />
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Voltar à lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container-fluid {
        max-width: 100%;
        padding: 0 15px;
    }

    .card {
        width: 100%;
    }

    .card-body dl.row dt {
        font-weight: bold;
        font-size: 1.125rem;
    }

    .card-body dl.row dd {
        font-size: 1.125rem;
    }

    .btn {
        min-width: 100px;
    }
</style>



@model AguasSetubal.Models.Contador

@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg mt-3">
                <div class="card-body">
                    <h4>Contador</h4>
                    <hr />
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="NumeroContrato" class="control-label"></label>
                            <input asp-for="NumeroContrato" class="form-control" />
                            <span asp-validation-for="NumeroContrato" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MoradaLocal" class="control-label"></label>
                            <input asp-for="MoradaLocal" class="form-control" />
                            <span asp-validation-for="MoradaLocal" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NumeroContador" class="control-label"></label>
                            <input asp-for="NumeroContador" class="form-control" />
                            <span asp-validation-for="NumeroContador" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataInstalacao" class="control-label"></label>
                            <input asp-for="DataInstalacao" class="form-control" />
                            <span asp-validation-for="DataInstalacao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ClienteId" class="control-label"></label>
                            <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



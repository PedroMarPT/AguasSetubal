@model AguasSetubal.Models.RequisicaoContador

@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg mt-3">
                <div class="card-body">
                    <h4>Editar a Requisicao Contador</h4>
                    <hr />
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Morada" class="control-label"></label>
                            <input asp-for="Morada" class="form-control" />
                            <span asp-validation-for="Morada" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Contato" class="control-label"></label>
                            <input asp-for="Contato" class="form-control" />
                            <span asp-validation-for="Contato" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsResidencial" /> @Html.DisplayNameFor(model => model.IsResidencial)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsEmpresarial" /> @Html.DisplayNameFor(model => model.IsEmpresarial)
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataRequisicao" class="control-label"></label>
                            <input asp-for="DataRequisicao" class="form-control" />
                            <span asp-validation-for="DataRequisicao" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsValid" /> @Html.DisplayNameFor(model => model.IsValid)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsRequested" /> @Html.DisplayNameFor(model => model.IsRequested)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



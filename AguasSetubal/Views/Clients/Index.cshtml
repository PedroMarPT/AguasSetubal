@model IEnumerable<AguasSetubal.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}
<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h4 class="">@ViewData["Title"]</h4>
            <a asp-action="Create" class="btn btn-primary">Criar novo cliente</a>
        </div>
        <div class="col-12">
            <div class="card shadow-lg mt-3">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Morada</th>
                                    <th>Nº Cartão Cidadão</th>
                                    <th>NIF</th>
                                    <th>Contacto</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="column-with-min-250">@item.Nome</td>
                                        <td class="column-with-min-250">@item.MoradaFaturacao</td>
                                        <td>@item.NumeroCartaoCidadao</td>
                                        <td>@item.NIF</td>
                                        <td>@item.ContactoTelefonico</td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1"><i class="fas fa-edit"></i></a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mx-1"><i class="fas fa-search"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







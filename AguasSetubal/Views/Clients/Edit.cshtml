@model AguasSetubal.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg mt-3 scroll">
                <div class="card-body">
                    <h4 class="card-title text-center">Detalhes do Cliente</h4>
                    <hr />
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MoradaFaturacao" class="control-label"></label>
                            <input asp-for="MoradaFaturacao" class="form-control" />
                            <span asp-validation-for="MoradaFaturacao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NumeroCartaoCidadao" class="control-label"></label>
                            <input asp-for="NumeroCartaoCidadao" class="form-control" />
                            <span asp-validation-for="NumeroCartaoCidadao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NIF" class="control-label"></label>
                            <input asp-for="NIF" class="form-control" />
                            <span asp-validation-for="NIF" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactoTelefonico" class="control-label"></label>
                            <input asp-for="ContactoTelefonico" class="form-control" />
                            <span asp-validation-for="ContactoTelefonico" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Salvar" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
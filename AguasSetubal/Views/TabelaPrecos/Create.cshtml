@model AguasSetubal.Models.TabelaPrecos

@{
    ViewData["Title"] = "Create";
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg mt-3">
                <div class="card-body">
                    <h4>Criar novo escalão</h4>
                    <hr />
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="NomeEscalao" class="control-label"></label>
                            <input asp-for="NomeEscalao" class="form-control" />
                            <span asp-validation-for="NomeEscalao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LimiteInferior" class="control-label"></label>
                            <input asp-for="LimiteInferior" class="form-control" />
                            <span asp-validation-for="LimiteInferior" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LimiteSuperior" class="control-label"></label>
                            <input asp-for="LimiteSuperior" class="form-control" />
                            <span asp-validation-for="LimiteSuperior" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ValorUnitario" class="control-label"></label>
                            <input asp-for="ValorUnitario" class="form-control" />
                            <span asp-validation-for="ValorUnitario" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



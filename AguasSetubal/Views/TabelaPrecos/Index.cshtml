@model IEnumerable<AguasSetubal.Models.TabelaPrecos>

@{
    ViewData["Title"] = "Tabela preços";
}
<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h4 class="display-4 text-primary">@ViewData["Title"]</h4>
            <a asp-action="Create" class="btn btn-primary btn-lg">Criar novo escalão</a>
        </div>
        <div class="col-12">
            <div class="card shadow-lg mt-3">
                <div class="card-body p-0">
                    <div class="table-responsive" style="width: 100%;">
                        <table class="table table-striped" style="font-size: 1.125rem; white-space: nowrap;">
                            <thead style="background-color: #007bff; color: white;">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NomeEscalao)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LimiteInferior)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LimiteSuperior)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ValorUnitario)
                                    </th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody style="background-color: #e9f7fe;">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NomeEscalao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LimiteInferior)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LimiteSuperior)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ValorUnitario)
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1">Editar</a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mx-1">Detalhes</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .container-fluid {
        max-width: 100%;
        padding: 0 15px;
    }

    .card {
        width: 100%;
    }

    .table-responsive {
        max-height: 80vh;
    }

    .table thead th {
        text-align: left;
        padding: 12px;
    }

    .table tbody td {
        padding: 10px;
        text-align: left;
        color: #333;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #cceeff;
    }

    .table-striped tbody tr:nth-of-type(even) {
        background-color: #e9f7fe;
    }

    .table tbody tr:hover {
        background-color: #b3e0ff;
    }

    .table tbody td {
        border-top: 1px solid #ddd;
    }

    .table td, .table th {
        white-space: nowrap;
    }

    .btn {
        min-width: 100px;
    }
</style>
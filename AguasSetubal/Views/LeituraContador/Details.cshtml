@model AguasSetubal.Models.LeituraContador

@{
    ViewData["Title"] = "Details";
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg mt-3">
                <div class="card-body">
                    <h4>Leitura Contador</h4>
                    <hr />
                    <div>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.LeituraAnterior)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.LeituraAnterior)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.LeituraAtual)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.LeituraAtual)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Consumo)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Consumo)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.DataLeitura)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.DataLeitura)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.IsInvoiced)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.IsInvoiced)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Contador)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Contador.Id)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Fatura)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Fatura.Id)
                            </dd>
                        </dl>
                    </div>
                    <div>
                        @if (this.User.IsInRole("Funcionario"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                            <a asp-action="Index">Back to List</a>

                        }
                        else
                        {
                            <a asp-action="Index" asp-route-id="@this.User.Identity.Name">Back to List</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


 
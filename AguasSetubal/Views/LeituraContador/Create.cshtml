@model AguasSetubal.Models.LeituraContador

@{
    ViewData["Title"] = "Nova Leitura";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancelar</a>
        </div>
        <div class="col-lg-8 col-md-10 col-sm-12 mx-auto mt-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h4 class="card-title text-center">Dados do Cliente</h4>
                    <hr />
                    <div class="mb-4">
                        <p><strong>Cliente:</strong> @Model.Cliente.Nome</p>
                        <p><strong>Leitura Anterior:</strong> @Model.LeituraAnterior m³</p>
                    </div>
                    <form asp-action="Create">
                        <div class="form-group">
                            <label asp-for="Valor" class="control-label">Leitura Atual (m³)</label>
                            <input asp-for="Valor" class="form-control form-control-lg" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="ClienteId" />

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

